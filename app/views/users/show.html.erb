<% if @book.errors.any? %>
<div id="error_explanation">
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class='col-xs-3'>
  <h2>User info</h2>
  <table class='table'>
    <tr>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class:"attachment user profile_image fallback" , fallback: "no_image.jpg" %>
    </tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>

  <div class='row'>
    <%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  </div>

  <%= form_for(@book) do |f| %>
  <h2>New book</h2>
  <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class:"col-xs-12 book_title" %>
  </div>
  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body, class:"col-xs-12 book_body", rows:"3" %>
  </div>
  <div class="actions row">
    <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
  </div>
  <% end %>

</div>

<div class='col-xs-9'>
  <h2>Books</h2>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, format: 'jpeg', class:"attachment user profile_image fallback" , fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
      <%= paginate @books, class: "paginate" %>
    </tbody>
  </table>
</div>
