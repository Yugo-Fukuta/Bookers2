<h2>User info</h2>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for(@user) do |f| %>
<div class="field">
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, class:"name", id:"user_name", placeholder:"#{@user.name}" %>
  <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
</div>
<div class="field">
  <label for="user_image">Image</label>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "user_image", fallback: "no_image.jpg" %>
  <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>
<div class="field">
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction, class:"introduction" %>
</div>
<div class="actions">
<%= f.submit "Update User" %>
</div>
<% end %>
